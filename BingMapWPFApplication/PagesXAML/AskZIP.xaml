<Window x:Class="BingMapWPFApplication.PagesXAML.AskZIP"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ask Input" Height="186.957" Width="268.478">
    <Grid>
        <TextBox VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="txtTargetZip" Margin="52,35,50,85" Width="84" Height="20"/>
        <TextBlock IsHitTestVisible="False" Text="  ZIP Code" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="52,35,50,85" Foreground="DarkGray" Width="84" Height="20">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=txtTargetZip}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <Button Content="Search" HorizontalAlignment="Center" Margin="80,80,80,0" VerticalAlignment="Top" Width="70" Height="40"/>

    </Grid>
</Window>
